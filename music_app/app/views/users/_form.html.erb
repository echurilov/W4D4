<form action="<%= action %>" method="post">
<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
  <input type="hidden" name="_method" value="<%= method %>">

  <label>
    Email:
    <input
      type="email"
      name="user[email]"
      value="<%= user.email %>">
  </label>

  <% if logged_in? %>
    <label for="old_password">
      Current Password:
      <input
        type="password"
        name="user[password]">
    </label>
  <% end %>

  <% if logged_in? %>
    <% password_text = "New Password:"%>
  <% else %>
    <% password_text = "Password:"%>
  <% end %>

  <label for="new_password">
    <% password_text %>
    <input
      type="password"
      name="user[password]">
  </label>

  <% if logged_in? %>
  <label>
    Bio
    <textarea
      name="user[bio]">
      <%= user.bio %>
    </textarea>
  </label>
  <% end %>

  <input type="submit" value="Submit">
</form>
